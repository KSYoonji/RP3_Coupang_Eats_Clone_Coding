<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="170dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgv_home_franchaise"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/img_franchaise_one" />

    <TextView
        android:id="@+id/tv_home_franchaise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:text="tv"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_review_star" />

        <TextView
            android:id="@+id/tv_home_franchaise_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_middle_spot" />

        <TextView
            android:id="@+id/tv_home_franchaise_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home_franchaise_delivery_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="tv"
        android:textColor="@color/black"
        android:textSize="12sp" />


</LinearLayout>