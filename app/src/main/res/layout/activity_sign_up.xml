<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgv_sign_up_finish"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    app:srcCompat="@drawable/ic_sign_up_cancel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="회원가입"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A4ACB5 " />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_coupang_logo"
                tools:layout_editor_absoluteY="116dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="17dp"
                android:gravity="start"
                android:text="회원정보를 입력해주세요"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:padding="1.0dp">

                <ImageView
                    android:id="@+id/imgv_sign_up_one"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edge_grey"
                    android:padding="1.0dp"
                    android:src="@drawable/ic_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_signup_email"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="-5dp"
                    android:background="@drawable/edge_grey_empty"
                    android:hint="@string/signup_email"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgv_sign_up_one"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <View
                    android:id="@+id/v_sign_up_email_red"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#CA2339"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_one" />

                <View
                    android:id="@+id/v_sign_up_email_blue"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#3C6EF7"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_one" />

                <TextView
                    android:id="@+id/tv_sign_up_warn_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="이메일을 입력하세요"
                    android:textColor="#CA2339"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_one" />

                <ImageView
                    android:id="@+id/imgv_sign_up_check_email"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_check_blue_sign_up" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1.0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imgv_sign_up_two"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edge_grey"
                    android:padding="1.0dp"
                    android:src="@drawable/ic_pwd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:id="@+id/edt_signup_pwd"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="-5dp"
                    android:background="@drawable/edge_grey_empty"
                    android:hint="@string/signup_pwd"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgv_sign_up_two"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <View
                    android:id="@+id/v_sign_up_pwd_red"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#CA2339"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_two" />

                <View
                    android:id="@+id/v_sign_up_pwd_blue"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#3C6EF7"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_two" />

                <ImageView
                    android:id="@+id/imgv_sign_up_check_pwd"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_check_blue_sign_up" />

                <ImageView
                    android:id="@+id/x_one"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_finish_sign__up"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/tv_sign_up_warn_pwd_o"
                    app:layout_constraintHorizontal_bias="0.761"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_two" />

                <TextView
                    android:id="@+id/tv_sign_up_warn_pwd_o"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="7dp"
                    android:text="영문/숫자/특수문자 2가지 이상 조합(8~20자)"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/x_one"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_two" />

                <ImageView
                    android:id="@+id/x_two"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_finish_sign__up"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/tv_sign_up_warn_pwd_t"
                    app:layout_constraintHorizontal_bias="0.761"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sign_up_warn_pwd_o" />

                <TextView
                    android:id="@+id/tv_sign_up_warn_pwd_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingStart="7dp"
                    android:text="3개 이상 연속되거나 동일한 문자/숫자 제외"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/x_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_sign_up_warn_pwd_o" />

                <ImageView
                    android:id="@+id/x_three"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_finish_sign__up"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/tv_sign_up_warn_pwd_th"
                    app:layout_constraintHorizontal_bias="0.761"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sign_up_warn_pwd_t" />

                <TextView
                    android:id="@+id/tv_sign_up_warn_pwd_th"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingStart="7dp"
                    android:text="아이디(이메일) 제외"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/x_three"
                    app:layout_constraintTop_toBottomOf="@id/tv_sign_up_warn_pwd_t" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1.0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imgv_sign_up_three"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edge_grey"
                    android:padding="1.0dp"
                    android:src="@drawable/ic_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:id="@+id/edt_signup_name"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="-5dp"
                    android:background="@drawable/edge_grey_empty"
                    android:hint="@string/signup_name"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgv_sign_up_three"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/tv_sign_up_warn_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="이름을 정확히 입력하세요"
                    android:textColor="#CA2339"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_three" />

                <ImageView
                    android:id="@+id/imgv_sign_up_check_name"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_check_blue_sign_up" />

                <View
                    android:id="@+id/v_sign_up_name_red"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#CA2339"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_three" />


                <View
                    android:id="@+id/v_sign_up_name_blue"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#3C6EF7"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_three" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:padding="1.0dp">

                <ImageView
                    android:id="@+id/imgv_sign_up_four"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edge_grey"
                    android:padding="1.0dp"
                    android:paddingTop="4.0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_phone_num"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:id="@+id/edt_signup_phone_num"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="-5dp"
                    android:background="@drawable/edge_grey_empty"
                    android:digits="0123456789"
                    android:hint="@string/signup_phone_num"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgv_sign_up_four"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/tv_sign_up_warn_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="휴대폰 번호를 정확하게 입력하세요"
                    android:textColor="#CA2339"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_four" />

                <ImageView
                    android:id="@+id/imgv_sign_up_check_num"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_check" />

                <View
                    android:id="@+id/v_sign_up_num_red"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#CA2339"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_four" />


                <View
                    android:id="@+id/v_sign_up_num_blue"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="-1dp"
                    android:background="#3C6EF7"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgv_sign_up_four" />

                <ImageView
                    android:id="@+id/imgv_sign_up_check_phone_num"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_check_blue_sign_up" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="18dp"
                android:background="#A4ACB5 " />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="22dp"
                android:gravity="start"
                android:text="쿠팡 서비스약관에 동의해주세요"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/check_sign_up_all"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/checkbox_custom"
                    android:button="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:text="모두 동의합니다."
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/check_sign_up_all"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="15dp"
                    android:background="#CBCBCB "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/check_sign_up_all" />

                <View
                    android:id="@+id/view"
                    android:layout_width="1.0dp"
                    android:layout_height="187dp"
                    android:layout_marginStart="15dp"
                    android:background="#CBCBCB "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="1.0dp"
                    android:layout_height="187dp"
                    android:layout_marginEnd="15dp"
                    android:background="#CBCBCB "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/checkbox_custom"
                    android:button="@null"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/line1" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="18dp"
                    android:text="[필수] 만 14세이상입니다"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/checkBox2"
                    app:layout_constraintTop_toBottomOf="@+id/line1" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/checkbox_custom"
                    android:button="@null"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="13dp"
                    android:text="[필수] 쿠팡 이용약관 동의"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/checkBox3"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_arrow_right_sign_up"
                    app:layout_constraintEnd_toStartOf="@+id/line2"
                    app:layout_constraintTop_toTopOf="@id/line1" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/checkbox_custom"
                    android:button="@null"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="13dp"
                    android:text="[필수] 전자금융거래 이용약관 동의"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/checkBox3"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginStart="98dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
